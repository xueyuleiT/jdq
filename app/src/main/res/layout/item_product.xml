<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/ripple_layout"
    android:clickable="true"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/dp_13"
    android:paddingBottom="@dimen/dp_10"
    android:paddingTop="@dimen/dp_13"
    android:paddingRight="@dimen/dp_21"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgUrl"
        android:layout_width="64dp"
        android:layout_height="64dp"
        />

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvSubTitle"
                android:textColor="#336363"
                android:textSize="@dimen/sp_14"
                android:text="热门产品"
                android:textStyle="bold"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/starLayout"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                
            </LinearLayout>

        </RelativeLayout>


        <TextView
            android:id="@+id/tvTags"
            android:layout_marginTop="@dimen/dp_9"
            android:text="5分钟到账，1万元日息低至4.5元"
            android:textColor="#363636"
            android:textSize="@dimen/sp_11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_marginTop="@dimen/dp_6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvReferenceAmount"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="参考额度：1000-1000000"
                android:textSize="@dimen/sp_11"
                android:textColor="#999999"/>

            <TextView
                android:id="@+id/tvFundNum"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="131441人已放款"
                android:textSize="@dimen/sp_11"
                android:textColor="#EB4F4F "/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>